{
  "name": "vue-use-refs",
  "version": "0.0.4",
  "description": "A lightweight composable for Vue 3 to manage multiple template refs",
  "keywords": [
    "vue",
    "vue3",
    "composable",
    "refs",
    "template-refs",
    "composition-api",
    "typescript",
    "reactive",
    "dom",
    "components"
  ],
  "homepage": "https://github.com/refinist/vue-use-refs#readme",
  "bugs": {
    "url": "https://github.com/refinist/vue-use-refs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/refinist/vue-use-refs.git"
  },
  "license": "MIT",
  "author": "Jeff Wang",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "format": "prettier --write .",
    "lint": "eslint",
    "lint:fix": "pnpm run lint --fix",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp && pnpm publish",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@refinist/prettier-config",
  "devDependencies": {
    "@refinist/eslint-config": "^1.0.4",
    "@refinist/prettier-config": "^0.0.4",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^10.2.3",
    "eslint": "^9.35.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "vue": "^3.5.21"
  },
  "peerDependencies": {
    "vue": ">=3"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=22.17.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
